@using eVote.Core.Application.ViewModels.PartyLeader
@model PartyLeaderViewModel
@{
    ViewData["Title"] = "Asignar Dirigente Político";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="col-14 col-md-4 offset-md-3">
    <div class="card">
        <div class="card-header bg-success text-bg-light">
            <h4 class="text-center">Asignar Dirigente Político a Partido</h4>
        </div>
        <div class="card-body">
            <form asp-controller="PartyLeader" asp-action="Create" method="POST" class="align-content-center">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="UserId" class="form-label">Dirigente Político:</label>
                    <select asp-for="UserId" class="form-select">
                        <option value="0">Seleccione un dirigente</option>
                        @if (ViewBag.Users != null)
                        {
                            @foreach (var user in ViewBag.Users)
                            {
                                <option value="@user.Id">@user.FirstName @user.LastName (@user.UserName)</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PartyId" class="form-label">Partido Político:</label>
                    <select asp-for="PartyId" class="form-select">
                        <option value="0">Seleccione un partido</option>
                        @if (ViewBag.Parties != null)
                        {
                            @foreach (var party in ViewBag.Parties)
                            {
                                <option value="@party.Id">@party.Name (@party.Acronym)</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="PartyId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AssignmentDate" class="form-label">Fecha de Asignación:</label>
                    <input asp-for="AssignmentDate" type="date" class="form-control" readonly />
                    <span asp-validation-for="AssignmentDate" class="text-danger"></span>
                </div>

                <div>
                    <button type="submit" class="btn btn-outline-dark float-end">guardar</button>
                    <a asp-controller="PartyLeader" asp-action="Index" class="btn btn-outline-dark float-end me-2">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>

