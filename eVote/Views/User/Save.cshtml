@using eVote.Core.Application.ViewModels.User
@model CreateUserViewModel
@{

    bool editMode = ViewBag.EditMode ?? false;

    if (editMode == false)
    {
        ViewData["Title"] = "Agregar usuario";
    }
    else ViewData["Title"] = "Editar usuario";

}
    
@if (ViewBag.ErrorMessage != null)
{
 <div class="alert alert-danger alert-dismissible fade show" role="alert">
    @ViewBag.ErrorMessage
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
 </div>
}


<div class="col-14 col-md-4 offset-md-3 ">
    <div class="card">
        <div class="card-header bg-success text-bg-light"><h4 class="text-center">@(editMode ? " Editar el usuario : " + Model.UserName : "Agregar un nuevo ")</h4></div>
        <div class="card-body">
            <form asp-controller="Party" asp-action="@(editMode ? "Edit" : "Create")" method="POST" class="align-content-center">
                <input type="hidden" asp-for="Id"/>
                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label">Nombre:</label>
                    <input class="form-control" asp-for="FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">Apellido:</label>
                    <input class="form-control" asp-for="LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email:</label>
                    <input class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">UserName:</label>
                    <input class="form-control" asp-for="UserName" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password:</label>
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm password:</label>
                    <input class="form-control" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Role" class="form-label">Role:</label>
                    <select asp-for="Role" class="form-select">
                        <option value="0">Select any option</option>
                        <option value="1">Admin</option>
                        <option value="2">Investor</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div>
                    <button type="submit" class="btn btn-outline-dark float-end">guardar</button>
                    <a asp-controller="Party" asp-action="Index" class="btn btn-outline-dark float-end me-2">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>

