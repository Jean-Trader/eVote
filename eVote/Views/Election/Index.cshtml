@using eVote.Core.Application.ViewModels.Election
@model List<ElectionViewModel>
@{
    ViewData["Title"] = "Elecciones";
    Layout = "_LayoutAdmin";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="text-center">
        <h1 class="display-4">Elecciones</h1>
    </div>
</div>

@{
    var hasActiveElection = Model.Any(e => e.Status == "Active");
}

@if (!hasActiveElection)
{
    <div class="row-mb-4">
        <div class="col-10 col-md-2">
            <a class="btn btn-outline-success" asp-controller="Election" asp-action="Create">Iniciar Nuevo Proceso Electivo</a>
        </div>
    </div>
}

<div class="container border rounded p-4" style="margin-top: 20px;">
    <div class="row mt-2">
        @if (Model.Count == 0)
        {
            <div class="text-md-center">
                <h5>No hay elecciones registradas</h5>
            </div>
        }
        else
        {
            @foreach (var election in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm border-0 @(election.Status == "Active" ? "border-success border-3" : "")">
                        @if (election.Status == "Active")
                        {
                            <div class="card-header bg-success text-white text-center">
                                <strong>ELECCIÓN ACTIVA</strong>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title text-danger fw-bold">@election.Name</h5>
                            <p class="card-subtitle mb-2 text-muted">Fecha de Realización:</p>
                            <p class="card-text">@election.ElectionDate?.ToString("dd/MM/yyyy")</p>
                            <p class="card-subtitle mb-2 text-muted">Estado:</p>
                            <p class="card-text">
                                <span class="@(election.Status == "Active" ? "text-success" : "text-secondary")">
                                    @(election.Status == "Active" ? "Activa" : "Finalizada")
                                </span>
                            </p>
                            <p class="card-subtitle mb-2 text-muted">Partidos Participantes:</p>
                            <p class="card-text">@(election.Votes?.Select(v => v.Candidate?.Party).Distinct().Count() ?? 0)</p>
                            <p class="card-subtitle mb-2 text-muted">Total de Votos:</p>
                            <p class="card-text">@(election.Votes?.Count ?? 0)</p>

                            <div class="mt-3 d-flex justify-content-center">
                                @if (election.Status == "Active")
                                {
                                    <a class="btn btn-outline-warning btn-sm px-3" asp-controller="Election" asp-action="Finalize" asp-route-id="@election.Id">Finalizar</a>
                                }
                                else if (election.Status == "Finalized")
                                {
                                    <a class="btn btn-outline-primary btn-sm px-3" asp-controller="Election" asp-action="Results" asp-route-id="@election.Id">Ver Resultados</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>