@using eVote.Core.Application.ViewModels.Election
@model ElectionViewModel
@{
    ViewData["Title"] = "Iniciar Nuevo Proceso Electivo";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="col-14 col-md-4 offset-md-3">
    <div class="card">
        <div class="card-header bg-success text-bg-light">
            <h4 class="text-center">Iniciar Nuevo Proceso Electivo</h4>
        </div>
        <div class="card-body">
            <form asp-controller="Election" asp-action="Create" method="POST" class="align-content-center">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Nombre de la Elección:</label>
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ElectionDate" class="form-label">Fecha de Realización:</label>
                    <input class="form-control" asp-for="ElectionDate" type="date" />
                    <span asp-validation-for="ElectionDate" class="text-danger"></span>
                </div>

                <div>
                    <button type="submit" class="btn btn-outline-dark float-end">guardar</button>
                    <a asp-controller="Election" asp-action="Index" class="btn btn-outline-dark float-end me-2">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>