@using eVote.Core.Application.ViewModels.Candidacy
@model CandidacyViewModel

@{
    ViewData["Title"] = "Asignar Candidato a Puesto";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-12 col-md-6 col-lg-5">
        <div class="card shadow-lg">
            <div class="card-header bg-success text-bg-light text-center">
                <h4 class="mb-0">Asignar Candidato a Puesto Electivo</h4>
            </div>
            <div class="card-body">
                <form asp-controller="Candidacy" asp-action="Create" method="POST">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="PartyId" />
                    <input type="hidden" asp-for="RegistrationDate" />

                    <div class="mb-3">
                        <label asp-for="CandidateId" class="form-label">Candidato:</label>
                        <select class="form-select" asp-for="CandidateId">
                            <option value="0">Seleccione un candidato</option>
                            @foreach (var candidate in ViewBag.Candidates)
                            {
                                <option value="@candidate.Id">
                                    @candidate.FirstName @candidate.LastName (@candidate.Party?.Acronym)
                                </option>
                            }
                        </select>
                        <span asp-validation-for="CandidateId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ElectivePositionId" class="form-label">Puesto Electivo:</label>
                        <select class="form-select" asp-for="ElectivePositionId">
                            <option value="0">Seleccione un puesto</option>
                            @foreach (var position in ViewBag.Positions)
                            {
                                <option value="@position.Id">@position.Name</option>
                            }
                        </select>
                        <span asp-validation-for="ElectivePositionId" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-outline-dark me-2">Guardar</button>
                        <a asp-controller="Candidacy" asp-action="Index" class="btn btn-outline-dark">Volver</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
