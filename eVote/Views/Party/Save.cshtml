@using eVote.Core.Application.ViewModels.Party
@model PartyViewModel
@{

    bool editMode = ViewBag.EditMode ?? false;

    if (editMode == false)
    {
        ViewData["Title"] = "Agregar partido";
    }
    else ViewData["Title"] = "Editar partido";

}
    
@if (ViewBag.ErrorMessage != null)
{
 <div class="alert alert-danger alert-dismissible fade show" role="alert">
    @ViewBag.ErrorMessage
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
 </div>
}


<div class="col-14 col-md-4 offset-md-3 ">
    <div class="card">
        <div class="card-header bg-success text-bg-light"><h4 class="text-center">@(editMode ? "Editar el partido : " + Model.Name : "Agregar un nuevo partido")</h4></div>
        <div class="card-body">
            <form asp-controller="Party" asp-action="@(editMode ? "Edit" : "Create")" method="POST" enctype="multipart/form-data" class="align-content-center">
                <input type="hidden" asp-for="Id"/>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Nombre:</label>
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Acronym" class="form-label">Siglas:</label>
                    <input class="form-control" asp-for="Acronym" />
                    <span asp-validation-for="Acronym" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Descripción</label>
                    <textarea class="form-control form-control-lg" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="LogoFile" class="form-label">Logo:</label>
                    <input class="form-control" asp-for="LogoFile" />
                    <span asp-validation-for="LogoFile" class="text-danger"></span>
                </div>
                <div>
                    <button type="submit" class="btn btn-outline-dark float-end">guardar</button>
                    <a asp-controller="Party" asp-action="Index" class="btn btn-outline-dark float-end me-2">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>

