@using eVote.Core.Application.ViewModels.Party
@model List<UpPartyViewModel>
@{
    ViewData["Title"] = "Partidos";
    Layout = "_LayoutAdmin";
}

<div class="row">
    <div class="text-center">
        <h1 class="display-4">Partidos</h1>
    </div>
</div>

<div class="row-mb-4">
    <div class="col-10 col-md-2">
        <a class="btn btn-outline-success" asp-controller="Party" asp-action="Create">Añadir Partido</a>
    </div>
</div>

<div class="container border rounded p-4" style="margin-top: 20px;">
<div class="row mt-2">
    @if (Model.Count == 0)
    {
        <div class="text-md-center">
            <h5>Añade algún partido</h5>
        </div>
    }
    else
    {

        @foreach (var CMV in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0">
                        <img src="@CMV.Logo" class="card-img-top responsive-image" alt="@CMV.Name">
                    <div class="card-body">
                          <h5 class="card-title text-danger fw-bold">Nombre:</h5>
                          <h6 class="card-subtitle text-danger fw-bold">@CMV.Name</h6>
                            <p class="card-subtitle mb-2 text-muted"><strong>siglas:</strong> </p>
                          <p class="card-text">@CMV.Acronym</p>
                            <p class="card-subtitle mb-2 text-muted"><strong>Descripción</strong></p>
                          <p class="card-text">@CMV.Description</p>
                          <p class="card-text">
                              <strong>Estatus:</strong>
                              <span class="@(CMV.Status == true ? "text-success" : "text-danger")">
                                  @(CMV.Status == true ? "Activado" : "Desactivado")
                              </span>
                          </p>
                        <div class="mt-3 d-flex justify-content-between">
                              <a class="btn btn-outline-warning btn-sm px-3" asp-controller="Party" asp-action="Edit" asp-route-id="@CMV.Id">Editar</a>
                              <a class="btn btn-outline-danger btn-sm px-3" asp-controller="Party" asp-action="ChangeStatus" asp-route-id="@CMV.Id">
                                  @(CMV.Status == true ? "Desactivar" : "Activar")
                              </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
</div>
