@using eVote.Core.Application.ViewModels.User

@model LoginViewModel
@{
    ViewData["Title"] = "Login Page";
}

<div class="d-flex justify-content-center">

    <div class="col-12 col-md-4">
        <div class="card">
            <div class="card-header bg-success text-light"><h5 class="text-center">Login user</h5></div>
            <div class="card-body">
                @Html.ValidationSummary(false,"",new {@class = "text-danger"})
                <form asp-controller="Login" asp-action="Index" method="POST">
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">UserName:</label>
                        <input class="form-control" asp-for="UserName" />                   
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password:</label>
                        <input class="form-control" asp-for="Password" />                    
                    </div>
                    
                    <div>
                        <button type="submit" class="btn btn-outline-dark float-end"><i class="bi bi-door-open"></i> Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="alert align-content-around mt-3">
        <strong>Credenciales de prueba:</strong><br />
        Usuario: <code>Jean</code><br />
        Contraseña: <code>admin123</code>
    </div>
    
</div>
