@using eVote.Core.Application.ViewModels.Candidate
@model PoliticalHomeViewModel
@{
    ViewData["Title"] = "Ciudadanos";
    Layout = "_LayoutPolitical";
}

<div class="container mt-4">

    <div class="text-center mb-4">
        <h2>Welcome, Leader</h2>
        <p class="text-muted">Partido e indicadores</p>
    </div>

    @if(!string.IsNullOrEmpty(Model.PartyName)){
    <div class="card mb-4 shadow-sm">
        <div class="card-body d-flex align-items-center">
            <img src="@Model.PartyLogoPath" alt="Party Logo" width="80" height="80" class="me-3 rounded-circle border">
            <div>
                <h4>@Model.PartyName (@Model.PartyAcronym)</h4>
                <p class="text-secondary mb-0">Información del partido politico</p>
            </div>
        </div>
        </div>
    } else
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-body d-flex align-items-center">
                <h4> No estás asociado a ningún partido</h4>
            </div>
        </div>
    }

   

    <div class="row g-3 text-center">
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5>Active Candidates</h5>
                    <h3 class="text-success fw-bold">@Model.ActiveCandidates</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5>Inactive Candidates</h5>
                    <h3 class="text-danger fw-bold">@Model.InactiveCandidates</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5>Political Alliances</h5>
                    <h3 class="text-primary fw-bold">@Model.PoliticalAlliances</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5>Pending Alliance Requests</h5>
                    <h3 class="text-warning fw-bold">@Model.PendingAllianceRequests</h3>
                </div>
            </div>
        </div>
    </div>
</div>